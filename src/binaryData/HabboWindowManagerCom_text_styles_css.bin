    anti-alias-type: normal;
}

headline_small {
    font-family: AntennaCond Bold;
    font-size: 12;
    anti-alias-type: normal;
}

chat_name {
	font-family: Volter Bold;
    font-size: 9;
    anti-alias-type: normal;
}

chat_speak {
	font-family: Volter;
    font-size: 9;
